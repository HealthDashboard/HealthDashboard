#!/bin/bash

docker run -d                                             \
       -v $HOME/.psql-container-data:/psql-container-data \
       -p 5432:5432                                       \
       -e PGDATA=/psql-container-data/data                \
       -e POSTGRES_DB=health-dashboard                    \
       -e POSTGRES_USER=health-user                       \
       -e POSTGRES_PASSWORD=health-password               \
       --name psql-container                              \
       postgres:10

docker exec psql-container psql --dbname postgres -U health-user --set db=test_db -c 'CREATE DATABASE health-dashboard-test;' 2>&1 > /dev/null
