#!/bin/bash

if [ -z "`docker ps --filter "name=psql-container-test" -q`" ]; then
    startPostgresqlTest
fi

if [ -z "`docker images --filter "label=rails" -q`" ]; then
    echo "Docker image for rails not found. Please wait while I create it."
    sleep 2
    createRailsImage
fi

docker run -it --rm                     \
       -v $HOME/.gems:/usr/local/bundle \
       -v $PWD:/usr/src/myapp           \
       -w /usr/src/myapp                \
       -e RAILS_ENV=rspec               \
       --link psql-container-test       \
       --name rails                     \
       rails:latest bundle exec rspec "$@"

