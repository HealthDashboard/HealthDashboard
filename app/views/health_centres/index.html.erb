<%= stylesheet_link_tag "health_centres.css" %>

<div class="page">
<div class="mapa">
  <div class="mapa fixed" id='map'></div>
  <div class="map-config legend" id="legend">
    <div class="map-config-header legend-header" onclick="show_menu('#legend')">
      <p>Legendas</p>
    </div>
    <div class="legend-body">
      <div class="legend-item">
        <%= image_tag("/health_centre_icon.png", :class => "legend-img") %>
        <p>ESTADUAL</p>
      </div>
      <div class="legend-item">
        <%= image_tag("/health_centre_icon2.png", :class => "legend-img") %>
        <p>MUNICIPAL</p>
      </div>
    </div>
  </div>
  <div class="map-config select health_centre translateX-legendsize" id="div-adm">
    <div class="map-config-header select-header" onclick="show_menu('#div-adm')">
      <p>Configurações do mapa</p>
    </div>
    <div class="select-body health_centre">
      <p>Visualizar limites administrativos:</p>
      <form>
        <ul id="radio-list">
          <li><input type="radio" name="optRadio" value="0" onchange="setShape('Shape_SP.geojson', null)"> Município de São Paulo</li>
          <li><input type="radio" name="optRadio" value="1" onchange="setShape('Shape_CRS.geojson', null)"> Coordenadoria Regional de Saúde</li>
          <li><input type="radio" name="optRadio" value="2" onchange="setShape('Shape_STS.geojson', null)"> Supervisão Técnica de Saúde</li>
          <li><input type="radio" name="optRadio" value="3" onchange="setShape('Shape_PR.geojson', null)"> Prefeitura Regional</li>
          <li><input type="radio" name="optRadio" value="4" onchange="setShape('Shape_DA.geojson', null)"> Distritos Administrativos</li>
          <li><input type="radio" name="optRadio" value="5" onchange="setShape('Shape_UBS.geojson', null)"> Áreas de Abrangência de UBS</li>
          <li><input type="radio" name="optRadio" value="5" onchange="setShape(null, null)" checked> Nenhum</li>
        </ul>
      </form>
    </div>
  </div>
</div>
<div class="info">
    <div class="name">
      <h1 id="search-name">SÃO PAULO</h1>
      <div id="labelOverlay">
        <p class="n_procedures"></p>
        <p class="atendimentos"></p>
      </div>
      <div id="hosp-info"></div>
    </div>
    <hr>
    <div class="grafico barras" id='bt-graph2'></div>
  </div>
</div>

<!-- Analise button -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Internações Hospitalares por Especialidade</h4>
      </div>
      <div class="modal-body">
          <div id="chart_div" align="center"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
      </div>
    </div>
  </div>
</div>

<div id="loading_overlay"class="loading">Loading&#8230;</div> <!-- Loading Overlay -->

<script>
  $(document).ready(initialize)
  document.onload = load_all_points();
  document.onload = create_chart();
</script>
