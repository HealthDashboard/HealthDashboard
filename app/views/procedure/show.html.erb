<%= stylesheet_link_tag "procedure.css" %>
<div class="container">
<div class = "row">
    <%= javascript_tag do %>
      window.MAX_SLIDERS = '<%= $MAX_SLIDERS.inspect.html_safe %>';
    <% end %>



    <div id="map-affix" class = "col-sm-9 affix">
        <div class = "map-wrapper" id = "procedure_map"> </div>
    </div>
    <div class="col-sm-9">
        <h1> </h1>
    </div>
    <div class="map-config select" id="div-adm">
        <div class="map-config-header select-header" onclick="show_config2()">
        <p>Configurações do mapa</p>
        </div>
        <div class="select-body">
        <p>Visualizar limites administrativos:</p>
        <form>
            <ul id="radio-list">
            <li><input type="radio" name="optRadio" value="0" onchange="setShape('Shape_SP.geojson', null)"> Município de São Paulo</li>
            <li><input type="radio" name="optRadio" value="1" onchange="setShape('Shape_CRS.geojson', null)"> Coordenadoria Regional de Saúde</li>
            <li><input type="radio" name="optRadio" value="2" onchange="setShape('Shape_STS.geojson', null)"> Supervisão Técnica de Saúde</li>
            <li><input type="radio" name="optRadio" value="3" onchange="setShape('Shape_PR.geojson', null)"> Prefeitura Regional</li>
            <li><input type="radio" name="optRadio" value="4" onchange="setShape('Shape_DA.geojson', null)"> Distritos Administrativos</li>
            <li><input type="radio" name="optRadio" value="5" onchange="setShape('Shape_UBS.geojson', null)"> Áreas de Abrangência de UBS</li>
            <li><input type="radio" name="optRadio" value="5" onchange="setShape(null, null)" checked> Nenhum</li>
            </ul>
        </form>
        </div>
    </div>
    <div class ="col-sm-3">
        <div class="card card-block">
            <div class = "row">
                <div class="col-sm-8">
                    <label for="select_automatic_search" title="Habilitar Seleção Automática durante a pesquisa"><b>Busca automática: </b></label>
                </div>

                <div class="col-sm-4">
                    <label class="switch">
                        <input type="checkbox" id="automatic_search_checkbox" onchange="automatic_search()">
                        <span class="sliderOn round"></span>
                    </label>
                </div>
                <div class="col-sm-12"><hr></div> <!-- Space line -->

                <% @filters.each_with_index do |f, i| %>
                    <div class="col-sm-12">
                        <label for="<%= i %>" title="<%= @titles_filters[i] %>"><b>
                            <%= f %>
                        </b></label>
                        <select class="select-<%= i %> form-control" id="<%= i %>" multiple="multiple" onchange='change()'>
                            <% @options[i].each do |v| %>
                                <option value= "<%= v["id"] %>" > <%= v["text"] %> </option>
                            <% end %>
                        </select>
                    </div>

                    <div class="col-sm-12"><hr></div> <!-- Space line -->
                <% end %>

                <div class="col-sm-12">
                    <div class = "row">
                        <div class = "col-sm-2">
                            <label title="Selecionar os sexos"><b>Sexo</b></label>
                        </div>
                        <div class = "col-sm-5">
                            <div class="form-check form-check-inline" style = "max-width = 140px;">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" id="sexo_masculino" value="M" checked="unchecked" onchange="change()">Masculino
                                </label>
                            </div>
                        </div>
                        <div class = "col-sm-5">
                            <div class="form-check form-check-inline" style = "max-width = 120px;">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" id="sexo_feminino" value="F" checked="unchecked" onchange="change()">Feminino
                            </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12"><hr></div> <!-- Space line -->

                <% @sliders.each_with_index do |slid, index| %>
                    <div class="col-sm-12">
                        <label for="<%= index %>" title="<%= @titles_sliders[index] %>"><b>
                            <%= slid %>
                        </b></label>
                        <div class="row">
                            <div class="col-sm-1 text-right">
                                <span id="slider_<%= index %>_min">0</span>
                            </div>
                            <div class="col-sm-9">
                                <input id="slider_<%= index %>" type="text" style="width: 100%" />
                            </div>
                            <div class="col-sm-1" style = "text-align: left" id="text-left">
                                <span id="slider_<%= index %>_max"><%= $MAX_SLIDERS[index].to_s + "+" %></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12"><hr></div> <!-- Space line -->
                <% end %>

                <div class="col-sm-12">
                    <label title="Intervalo de tempo de busca"><b>Período</b></label>
                    <div class="input-daterange input-group" id="datepicker">
                        <input type="text" class="input-sm form-control" id="intervalStart" onchange="change()" />
                        <span class="input-group-addon" id="intervalTo">até</span>
                        <input type="text" class="input-sm form-control" id="intervalEnd" onchange="change()" />
                    </div>
                </div>

                <div class="col-sm-12">
                    <hr>
                    <button class="btn btn-success" type="button" id="btn-submit" onclick="buscar()">
                        <i class="fa fa-search" aria-hidden="true"></i> Buscar
                    </button>
                    <button class="btn btn-warning" type="button" id="btn-clear" onclick="limpar()">
                        <i class="fa fa-search" aria-hidden="true"></i> Limpar
                    </button>
                    <button class="btn btn-info" type="button" id="btn-print" onclick="print_maps()">
                        <i class="fa fa-search" aria-hidden="true"></i> Imprimir
                    </button>
                    <button class="btn btn-info" type="button" id="btn-graphs" onclick="graphs()">
                        <i class="fa fa-search" aria-hidden="true"></i> Dados Gerais
                    </button>
                    <button class="btn btn-info" type="button" id="btn-graphs">
                        <%= link_to "Download", download_procedure_index_path(format: "csv") %>
                    </button>
                </div>
                <div class = "col-sm-12" style = "height: 10px;"></div>
            </div>
        </div>
    </div>
</div>
</div>

<div id="loading_overlay"class="loading">Loading&#8230;</div> <!-- Loading Overlay -->

<script>
    $(document).ready(initProcedureMap);
    $(document).ready(dadosInput);
</script>
